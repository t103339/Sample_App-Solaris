<% if @user.errors.any? %>

   <div id="error_explanation">

      <div id="alert_count" class="alert alert-error">
        The form contains 
           <%= pluralize(@user.errors.count, "error") %>.
      </div>

      <div id="error_messages" class="explanations">
         <ul>
            <% @user.errors.full_messages.each do |msg| %>
               <li>* <%= msg %></li>
            <% end %>
         </ul>
      </div>

   </div>
      
<% end %>
